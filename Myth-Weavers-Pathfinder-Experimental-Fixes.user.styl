@-moz-document domain("myth-weavers.com") {

 input[placeholder="weapon name"]{
  margin-bottom: 3px;
}
 input[placeholder="total attack bonus"]{
  margin-bottom: 3px;
}
 input[placeholder="crit"]{
  margin-bottom: 3px;
}
input[placeholder="type"]{
  width: 24px;
}
    
 a#fillSkills.btn.btn-primary{
  margin-bottom: 9px
}
 a#clearSkills.btn.btn-danger{
  margin-bottom: 9px
}
  h1 {
  margin-top: 7px
}
    
    #character_txt input[type="text"] {
  font-size: 16px;
}

/* CHECKBOXES */
input[name="caster"]{
   margin-top: 0px;
   margin-bottom: 3px;
}

  input.skill_prof {
        margin-bottom: 3px
    }
    


/* CAMPAIGN AND EXP LINE LENGTH */
.character [name="campaign"] {
    width: 213px;
}

.character [name="experience"] {
    width: 53px;
}

/* ADJUST HEIGHTS OF BOTTOM TEXT FIELDS */ 
#character_statblock textarea, #character_other_notes textarea, #character_private_notes textarea {
  height: 141px;
}

/* NUDGE THE AC AND HEALTH TEXT TO THE LEFT */
#hp label {
   padding-right: 3px;
}

#ac_total label {
   padding-right: 4px;
}
   

}



